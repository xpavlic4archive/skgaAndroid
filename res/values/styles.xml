<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
     <color name="colorGray">#c0c0c0</color>
     <color name="colorWhite">#fff</color>
     
     <style name="Buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#393e24</item>
        <item name="android:shadowColor">#d5eb53</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
     </style>
     
	 <style name="Buttons.Intro">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>
     </style>
     <style name="Buttons.ActionBar">
         <item name="android:textSize">17sp</item>
         <item name="android:shadowColor">#91a63f</item>
         <item name="android:singleLine">true</item>
         <item name="android:ellipsize">end</item>
         <item name="android:textColor">@color/colorWhite</item>
         <item name="android:background">@drawable/button_s</item>
     </style>
     <style name="Buttons.AddBy">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
     </style>
     <style name="Buttons.ActionBar.Main">
        <item name="android:layout_weight">0.3</item>
     </style>
     <style name="Buttons.ActionBar.Main.Add">
         <item name="android:drawableLeft">@drawable/ico_add</item>
     </style>
     <style name="Buttons.ActionBar.Main.Edit">
         <item name="android:drawableLeft">@drawable/ico_edit</item>
         <item name="android:layout_marginLeft">8dp</item>
         <item name="android:layout_marginRight">8dp</item>
     </style>
     <style name="Buttons.ActionBar.Main.Back">
         <item name="android:drawableLeft">@drawable/ico_back</item>
     </style>
     <style name="Buttons.ActionBar.Back">
         <item name="android:drawableLeft">@drawable/ico_back</item>
     </style>
     <style name="Buttons.ActionBar.Main.EditList">
		<item name="android:layout_weight">1</item>
     </style>
     <style name="Buttons.ActionBar.Main.EditList.DeleteSelected">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_weight">0</item>
     </style>
     <style name="Buttons.ActionBar.Main.EditList.Back">
        <item name="android:layout_weight">2</item>
     </style>

     <style name="logo">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:background">@drawable/actionbar</item>
        <item name="android:layout_alignParentTop">true</item>
	</style>
     <style name="Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:shadowColor">#5e6d24</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_title</item>
        <item name="android:layout_below">@+id/logo</item>
     </style>
     
     <style name="AddByNameList">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="AddByNameText1">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5sp</item>
    </style>
    <style name="AddByForm">
         <item name="android:layout_width">fill_parent</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_marginLeft">10dp</item>
         <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="IntroLogoApp">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50sp</item>
        <item name="android:layout_marginBottom">50sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MainList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RowLayout">
        <item name="android:textSize">20sp</item>		<item name="android:textColor">#393e24</item>
		<item name="android:shadowColor">#dee76d</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="RowLayout.Hcp">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="hint">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textStyle">italic</item>
		<item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="no_names">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="action_bar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@drawable/actionbar_bottom</item>
    </style>
    
    <style name="CustomActivityTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    
    <style name="textInput">
        <item name="android:textColorHint">#899a38</item>
        <item name="android:textColor">#393e24</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_textinput</item>
    </style>
    
    <style name="butInput">
        <item name="android:layout_gravity">right</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/but_form</item>
    </style>
    
    <style name="LayoutView" parent="android:Theme">
        <item name="android:background">@drawable/bg_pattern</item>
    </style>
	
	<!-- styling ActionBar -->
	<style name="MyActionBar">
	    <item name="android:height">0dp</item>
	</style>
	
	
	<!-- styles for large displays -->
	
	 <style name="Buttons.Intro.Large">
		<item name="android:textSize">22sp</item>
		<item name="android:layout_width">300dp</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_marginBottom">16dp</item>
     </style>
     
     
     <!-- styles for small displays -->
     
     <style name="IntroLogoApp.Small">
         <item name="android:layout_marginTop">16dp</item>
         <item name="android:layout_marginBottom">0dp</item>
     </style>
     <style name="Buttons.Intro.Small">
         <item name="android:layout_marginTop">60dp</item>
     </style>
     <style name="action_bar.small">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
     </style>


</resources>