<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <TextView
        android:id="@+id/title"
        android:text="@string/search_by_name"
        style="@style/Title"
    />
    
    <ImageView 
        android:id="@+id/title_bar_top"
		style="@style/TitleBar"
		android:layout_below="@+id/title"
		android:contentDescription="@string/hr"
		/>

    <TextView
            android:id="@+id/hint"
			style="@style/hint"
            android:layout_below="@+id/title_bar_top"
            android:text="@string/search_hint_text"
            />
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/hint"
        android:layout_above="@+id/title_bar_bottom">

	    <EditText android:id="@+id/edit_search"
	              android:layout_height="wrap_content"
	              android:hint="@string/edit_search"
	              android:layout_weight="1"
	              android:layout_width="0dp"
	            />
	    <Button
	            android:id="@+id/searchButton"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/button_search"
	            android:layout_gravity="right"
	            android:onClick="startSearch"/>
	    
	</LinearLayout>
	  
	<ImageView 
        android:id="@+id/title_bar_bottom"
		style="@style/TitleBar"
		android:layout_above="@+id/action_bar"
		android:contentDescription="@string/hr"
	/>
    
    <LinearLayout
            android:id="@+id/action_bar"
            style="@style/action_bar">
	    
   		 <Button
	            android:id="@+id/close"
	            android:layout_width="0dp"
	            android:text="@string/backRecords_button"
	            style="@style/Buttons.ActionBar"
	            android:layout_weight="1"
	            android:onClick="close"/>
   		 
   	</LinearLayout>
    
</RelativeLayout>


